            <input type="text" id="apellido-ingresado" placeholder="Apellido">
            <input type="text" id="edad-ingresado" placeholder="Edad">
            <input type="alias" id="alias-ingresado" placeholder="Alias">
            <input type="avatar" id="avatar-ingresado" placeholder="Avatar">
            <input type="email" id="email-ingresado" placeholder="Email">
            <input type="text" id="mensaje-ingresado" placeholder="Mensaje">
